d <- 2
lb <- rep(0, d)
ub <- rep(1, d)
A <- rbind(-diag(d), diag(d))
A <- -diag(d)
b <- c(-lb, ub)
b <- -lb
n <- 10000

samples <- gausspolytopewalk::generate_vaidya_samples(n, c(.1, .1), A, b, 2)

plot(t(samples))

d <- 2
lb <- rep(0, d)
ub <- rep(Inf, d)
mu <- rep(0, d)
Sigma <- .5 * diag(d) + .5 * rep(1, d) %*% t(rep(1, d))

samples <- gausspolytopewalk::rtmvn(10000, mu, Sigma, lb, ub, "vaidya", 2, c(.01, .01))

